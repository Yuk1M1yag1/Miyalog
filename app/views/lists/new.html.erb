<h1 class="theme"><%= t('.new post') %></h1>
<%= link_to t('.back'), lists_path, class: "backbtn" %>
<div class="newbox">
  <div class="board">
  <%= form_with model: @list, local: true do |f| %>
  <% if @list.errors.any? %>
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="field">
    <%= f.label :name, t('.name') %> 
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :taste, t('.taste') %>
    <span class="star-rating">
      <%= f.radio_button :taste, "★☆☆☆☆" %><i></i>
      <%= f.radio_button :taste, "★★☆☆☆" %><i></i>
      <%= f.radio_button :taste, "★★★☆☆" %><i></i>
      <%= f.radio_button :taste, "★★★★☆" %><i></i>
      <%= f.radio_button :taste, "★★★★★" %><i></i>
    </span>
  </div>
  
  <div class="field">
    <%= f.label :price, t('.price') %>
    <span class="star-rating">
      <%= f.radio_button :price, "★☆☆☆☆" %><i></i>
      <%= f.radio_button :price, "★★☆☆☆" %><i></i>
      <%= f.radio_button :price, "★★★☆☆" %><i></i>
      <%= f.radio_button :price, "★★★★☆" %><i></i>
      <%= f.radio_button :price, "★★★★★" %><i></i>
    </span>
  </div>
  
  <div class="field">
    <%= f.label :service, t('.service') %>
    <span class="star-rating">
      <%= f.radio_button :service, "★☆☆☆☆" %><i></i>
      <%= f.radio_button :service, "★★☆☆☆" %><i></i>
      <%= f.radio_button :service, "★★★☆☆" %><i></i>
      <%= f.radio_button :service, "★★★★☆" %><i></i>
      <%= f.radio_button :service, "★★★★★" %><i></i>
    </span>
  </div>
  
  <div class="field">
    <%= f.label :memo, t('.memo') %>
    <%= f.text_area :memo %>
  </div>
  
  <div class="field">
    <%= f.label :image, t('.image') %>
    <%= f.file_field :image %> 
  </div>
  <br>
  <div class="field">
    <%= f.label :total, t('.total') %>
    <%= f.number_field :total, class: "hoge", min: 0, max: 100 %>　/100
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
  
  <% end %>
  
  <div class="chalk"></div>
  <div class="elaser"></div>
  <div class="elaser2"></div>

  </div>
</div>
