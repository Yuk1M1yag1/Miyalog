<h2 class="theme"><%= t('.edit user') %></h2>
<%= link_to t('.back'), lists_path, class: "backbtn" %>
<div class="editbox">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t('.email') %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t('.password （if you do not change your password, you can leave it blank）') %><%= t('.please enter at least 6 characters') %> <i></i><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br/>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('.confirm password') %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, t('.old password （if you want to change your infomation, please enter ）') %> <i></i><br/>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <div class="actions">
    <%= f.submit class: 'submit-btn' %>
  </div>
<% end %>
</div>
<br>
